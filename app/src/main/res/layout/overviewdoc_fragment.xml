<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/camera_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="10dp">

        <Button
            android:id="@+id/pre_be"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:background="@drawable/take_photo"
            android:text="@string/button_front_camera"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/take_photo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_below="@+id/pre_be"
            android:layout_marginBottom="15dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/take_photo"
            android:text="@string/button_shooting"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/pre_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/take_photo"
            android:layout_gravity="right"
            android:background="@drawable/take_photo"
            android:text="@string/button_rear_camera"
            android:textColor="@color/white" />
    </RelativeLayout>
</FrameLayout>