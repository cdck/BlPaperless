<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/tableColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/signin_item_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/signin_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0.5dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/signin_item_signtime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0.5dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/signin_item_signstate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0.5dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <Button
        android:id="@+id/signin_item_signtype"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0.5dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13sp" />

</LinearLayout>