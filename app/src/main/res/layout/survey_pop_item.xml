<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/select_item_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/survey_popitem_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/survey_popitem_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/survey_popitem_e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>