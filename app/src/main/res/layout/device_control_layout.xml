<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tableColor"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/all_check_cb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:button="@drawable/checkbox_select"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:text="@string/number"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="@string/member"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="@string/name_str"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="@string/dev_type"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="@string/dev_state"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="@string/whether_waibu"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="@string/interface_state"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dev_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rising"
                    style="@style/btn_style_pressend"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/rising" />

                <Button
                    android:id="@+id/stop"
                    style="@style/btn_style_pressend"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/button_stop" />

                <Button
                    android:id="@+id/falling"
                    style="@style/btn_style_pressend"
                    android:layout_width="wrap_content"
                    android:text="@string/falling" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/restart"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/restart" />

                <Button
                    android:id="@+id/shutdown"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/shutdown" />

                <Button
                    android:id="@+id/auxiliary_sign_in"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/auxiliary_sign_in" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/role_set"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/role_set" />

                <Button
                    android:id="@+id/boot"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/boot" />

                <Button
                    android:id="@+id/document_open"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/document_open"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/restart_app"
                    style="@style/btn_style_pressend"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="@string/restart_app" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>